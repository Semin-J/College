<div class="row">
  <div class="col-md-12">
    <h2>{{viewData.employee.firstName}} {{viewData.employee.lastName}} - Employee: {{viewData.employee.employeeNum}}
    </h2>
    <hr>
    <form action="/employee/update" method="POST" id="employee">
      <fieldset>
        <legend>Personal Information</legend>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="firstName">First Name: </label>
              <input type="text" class="form-control" id="firstName" name="firstName"
                value="{{viewData.employee.firstName}}">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="lastName">Last Name: </label>
              <input type="text" class="form-control" id="lastName" name="lastName"
                value="{{viewData.employee.lastName}}">
            </div>
          </div>
        </div>
        <div class="row">
          <div>
            <input type="hidden" class="form-control" id="employeeNum" name="employeeNum"
              value="{{viewData.employee.employeeNum}}">
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="email">Email: </label>
              <input type="email" class="form-control" id="email" name="email" value="{{viewData.employee.email}}">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="ssn">Social Security Number: </label>
              <input type="text" class="form-control" id="ssn" name="ssn" value="{{viewData.employee.SSN}}" readonly>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <div class="form-group">
              <label for="addressStreet">Address (Street): </label>
              <input type="text" class="form-control" id="addressStreet" name="addressStreet"
                value="{{viewData.employee.addressStreet}}">
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label for="addressCity">Address (City): </label>
              <input type="text" class="form-control" id="addressCity" name="addressCity"
                value="{{viewData.employee.addressCity}}">
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label for="addressState">Address (State): </label>
              <input type="text" class="form-control" id="addressState" name="addressState"
                value="{{viewData.employee.addressState}}">
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label for="addressPostal">Address (Zip Code): </label>
              <input type="text" class="form-control" id="addressPostal" name="addressPostal"
                value="{{viewData.employee.addressPostal}}">
            </div>
          </div>
        </div>
        <legend>Company Information</legend>
        <div class="row">
          <div class="col-md-3">
            <div class="form-group">
              <label for="isManager">Manager: </label>
              <input class="form-control" type="checkbox" id="isManager" name="isManager"
                {{#if employee.isManager}}checked{{/if}}>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label for="employeeManagerNum">Employee's Manager Number: </label>
              <input type="text" class="form-control" id="employeeManagerNum" name="employeeManagerNum"
                value="{{viewData.employee.employeeManagerNum}}">
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label>Status: </label> <br>
              <label class="checkbox-inline">
                <input type="radio" name="statusFT" values="Full Time"
                  {{#equal employee.status "Full Time"}}checked{{/equal}}>Full Time
              </label>
              <label class="checkbox-inline">
                <input type="radio" name="statusPT" values="Part Time"
                  {{#equal employee.status "Part Time"}}checked{{/equal}}>Part Time
              </label>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <label for="department">Department: </label>
              {{#if viewData.departments}}
              <select class="form-control" name="department" id="department">
                {{#each viewData.departments}}
                <option value="{{departmentId}}" {{#if selected}} selected {{/if}}>{{departmentName}} </option>
                {{/each}}
              </select>
              {{else}}
              <div>No Departments</div>
              {{/if}}
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="hireDate">Hire Date: </label>
              <input type="text" class="form-control" id="hireDate" name="hireDate"
                value="{{viewData.employee.hireDate}}" readonly>
            </div>

          </div>

        </div>
      </fieldset>
      <hr>
      <input type="submit" class="btn btn-primary pull-right" value="Update Employee">
      <br><br><br>
    </form>
  </div>
</div>


<div class="col-md-6">
  <div class="form-group">

  </div>
</div>