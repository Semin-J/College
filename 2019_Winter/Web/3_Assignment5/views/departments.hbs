<div class="row">
  <div class="col-md-12">
    <h2>Departments</h2>
    <a href="/departments/add" class="btn btn-success pull-right">Add New Department</a>
    <hr />
    <div class="table-responsive">
      <table class="table">
        
        <thead>
          <tr>
            <th>Department Number</th>
            <th>Department Name</th>
          </tr>
        </thead>

        {{#each departments}}
        <tbody>
          <tr>
            <td><a href="/employees?department={{this.departmentId}}">{{this.departmentId}}</a></td>
            <td><a href="/department/{{this.departmentId}}">{{this.departmentName}}</a></td>
          </tr>
        </tbody>
        {{/each}}

      </table>

    </div>

  </div>
</div>