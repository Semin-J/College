<div class="row">
  <div class="col-md-12">
    <h1>{{department.departmentName}} - Department: {{department.departmentId}}</h1>
    <hr>
    <form action="/department/update" method="POST">
      <input type="hidden" name="departmentId" value="{{department.departmentId}}">
      <div class="form-group">
        <label for="departmentname">Department Name</label><br>
        <input type="text" id="departmentname" name="departmentName" class="form-control"
          value="{{department.departmentName}}">
      </div>
      <input type="submit" class="btn btn-primary pull-right" value="Update Department">
      <br><br><br>
    </form>
  </div>
</div>